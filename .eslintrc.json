{
    "env": {
        "browser": true,
        "node": true,
        "jasmine": true
    },
    "extends": ["airbnb", "prettier"],
    "rules": {
        "comma-dangle": "off",
        "semi": "off",
        "import/prefer-default-export": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "spread": true
        }
    },
    "parser": "babel-eslint",
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "src"
                ]
            }
        }
    }
}